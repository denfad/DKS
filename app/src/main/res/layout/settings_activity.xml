<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp">

        <TextView
                android:id="@+id/month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:text="Выберите график работы:"
                android:textAlignment="textStart"
                android:textColor="@color/our_gray"
                android:textSize="34sp" />

        <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp">

            <RadioButton
                    android:id="@+id/ched_1"
                    android:textSize="44sp"
                    android:textColor="@color/our_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2/2 (у/в)" />

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_2_2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"/>

            <RadioButton
                    android:id="@+id/ched_2"
                    android:textSize="44sp"
                    android:textColor="@color/our_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5/2 (у/д/н)" />

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_52_1"
                    android:layout_marginTop="5dp"/>


            <RadioButton
                    android:id="@+id/ched_3"
                    android:textSize="44sp"
                    android:textColor="@color/our_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5/2 (у/в)" />

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_52_2"
                    android:layout_marginTop="5dp"/>


            <RadioButton
                    android:id="@+id/ched_4"
                    android:textSize="44sp"
                    android:textColor="@color/our_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4/2 (у/в)" />

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_42"
                    android:layout_marginTop="5dp"/>

        </RadioGroup>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="10dp"
                android:text="Начать работу с:"
                android:textAlignment="center"
                android:textColor="@color/our_gray"
                android:textSize="30sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
            android:orientation="horizontal"
                android:gravity="center">

            <EditText
                    android:id="@+id/date"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_txt_field"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:padding="7dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="числа"
                    android:textAlignment="center"
                    android:textColor="@color/our_gray"
                    android:textSize="30sp" />

        </LinearLayout>



        <ImageButton
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_button"
                android:layout_marginVertical="20dp"/>
    </LinearLayout>
</ScrollView>